<div class="content_sec">
  <div class="col3">
    <div class="col3_top">&nbsp;</div>
    <div class="col3_center">
      <h2 class="heading colr">Login</h2>
      <div class="login">
      <%= form_for @user_session, :url => login_path do |f| %>
        <%= f.error_messages %>
        <% if @user_session.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @user_session.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="registrd">
          <h3>Please Sign In</h3>
          <p>If you have an account with us, please log in.</p>
          <ul class="forms">
            <li class="txt">Username <span class="req">*</span></li>
            <li class="inputfield"><%= f.text_field :login, :class => 'bar' %></li>
          </ul>
          <ul class="forms">
            <li class="txt">Password <span class="req">*</span></li>
            <li class="inputfield"><%= f.password_field :password, :class => 'bar' %></li>
          </ul>
          <ul class="forms">
            <li class="txt">&nbsp;</li>
            <li><%= f.submit "Login" %> <%= link_to 'Forgot your password?', new_password_reset_path %></li>
          </ul>
        </div>
      <% end %>
        <div class="newcus">
          <h3>Don't have an account? Register Now!</h3>
          <p>By creating an account with SidelineSwap, you will be able to move through the offer process faster, store your shipping information, view and track offers in your locker and more.</p>
          <a href="<%= register_path %>" class="simplebtn"><span>Register</span></a>
        </div>
      </div>
      <div class="clear"></div>
    </div>
    <div class="clear"></div>
    <div class="col3_botm">&nbsp;</div>
  </div>
</div>
<div class="clear"></div>
