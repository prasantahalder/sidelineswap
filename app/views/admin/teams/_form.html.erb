      <h2><%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource.class.to_s %> from being saved:</h2>

      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
