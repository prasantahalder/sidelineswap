    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.select :state, states_list, {:include_blank => true} %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
