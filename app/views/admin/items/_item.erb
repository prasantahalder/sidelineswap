<tr>
  <td><%= link_to item.name, admin_item_path(item) %></td>
  <td><%= number_to_currency item.price %></td>
  <td><%= item.weight_lbs %></td>
  <td><%= link_to item.category, category_items_path(item.category) %></td>

  <td><%= link_to item.user, admin_user_path(item.user) %></td>
  <td><%= item.available %></td>  
  <td>
    <%= link_to 'edit', edit_admin_item_path(item) %>
    <%= link_to 'delete', admin_item_path(item), :method => :delete, :confirm => 'Are you sure?' %>
  </td>
</tr>
